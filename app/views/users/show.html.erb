<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, size:90)%>
        <%= @user.name %>
      </h1>
      <h2>
        <%= @user.email %>, <br> 
        Created at: <%= @user.created_at %>, <br>
        Updated at: <%= @user.updated_at %>
      </h2>
    </section>
  </aside>
</div>

Current time: <%= Time.now %> <br>